{
  "$id": "http://asl-validator.cloud/wait#",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "Type": {
      "type": "string",
      "pattern": "^Wait$"
    },
    "Next": {
      "type": "string"
    },
    "End": {
      "enum": [true]
    },
    "Comment": {
      "type": "string"
    },
    "OutputPath": {
      "type": ["string", "null"]
    },
    "InputPath": {
      "type": ["string", "null"]
    },
    "Seconds": {
      "type": "number",
      "minimum": 0
    },
    "Timestamp": {
      "type": "string"
    },
    "SecondsPath": {
      "type": ["string", "null"]
    },
    "TimestampPath": {
      "type": ["string", "null"]
    }
  },
  "oneOf": [{
    "required": ["Next"]
  }, {
    "required": ["End"]
  }],
  "required": ["Type"],
  "additionalProperties": false
}
