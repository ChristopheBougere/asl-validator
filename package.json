{
  "name": "asl-validator",
  "version": "2.2.1",
  "description": "Amazon States Language validator",
  "main": "./dist/validator.js",
  "bin": {
    "asl-validator": "./bin/asl-validator.js"
  },
  "scripts": {
    "build": "npx tsc",
    "lint": "npx eslint . --max-warnings 0 --ext ts",
    "test": "npm run build && npx jest",
    "prepare": "husky install",
    "semantic-release": "semantic-release"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ChristopheBougere/asl-validator.git"
  },
  "keywords": [
    "asl",
    "amazon states language",
    "aws",
    "step functions",
    "state machine",
    "validator",
    "linter"
  ],
  "author": "Christophe Boug√®re",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/ChristopheBougere/asl-validator/issues"
  },
  "homepage": "https://github.com/ChristopheBougere/asl-validator#readme",
  "dependencies": {
    "ajv": "^8.11.0",
    "commander": "^5.1.0",
    "jsonpath-plus": "^7.0.0",
    "asl-path-validator": "^0.9.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@types/jest": "^28.1.3",
    "@types/jsonpath": "^0.2.0",
    "@typescript-eslint/eslint-plugin": "^5.29.0",
    "@typescript-eslint/parser": "^5.29.0",
    "eslint": "^8.18.0",
    "eslint-plugin-jest": "^26.5.3",
    "husky": "^8.0.1",
    "jest": "^28.1.1",
    "jest-junit": "^14.0.0",
    "semantic-release": "^19.0.3",
    "ts-jest": "^28.0.5",
    "ts-node": "^10.8.1",
    "typescript": "^4.7.4"
  },
  "release": {
    "branches": [
      "main"
    ],
    "tagFormat": "${version}"
  },
  "jest": {
    "preset": "ts-jest",
    "testMatch": [
      "<rootDir>/**/__tests__/**/*.test.ts"
    ]
  }
}
